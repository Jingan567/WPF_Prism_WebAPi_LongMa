<UserControl x:Class="DailyApp.Wpf.Views.MemoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShow,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300"
                           LastChildFill="False">
                    <TextBlock DockPanel.Dock="Top"
                               Text="添加备忘录"
                               FontSize="20"
                               Margin="20,0,0,20"
                               FontWeight="Bold"></TextBlock>

                    <TextBox DockPanel.Dock="Top"
                             md:HintAssist.Hint="请输入备忘录标题"
                             Margin="20,10"></TextBox>
                    <TextBox DockPanel.Dock="Top"
                             Margin="20,10"
                             md:HintAssist.Hint="请输入备忘录内容"></TextBox>

                    <Button DockPanel.Dock="Top"
                            Content="添加到备忘录"
                            Margin="20,10"
                            Command="{Binding ShowAddCommand}"></Button>
                </DockPanel>

            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Margin="15,0,0,0"
                            Orientation="Horizontal">
                    <TextBox VerticalAlignment="Center"
                             md:HintAssist.Hint="查找备忘录事项...."
                             md:TextFieldAssist.HasClearButton="True" />

                </StackPanel>
                <Button Margin="10"
                        HorizontalAlignment="Right"
                        Content="添加备忘录"
                        Command="{Binding ShowAddCommand}" />
                <ScrollViewer Grid.Row="1">
                    <ItemsControl 
                                  ItemsSource="{Binding MemoList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Grid Width="220"
                                          Height="180"
                                          MaxWidth="250"
                                          Margin="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Border Grid.RowSpan="2"
                                                Background="#1E90EF"
                                                CornerRadius="5">
                                            <Canvas ClipToBounds="True">
                                                <Border Canvas.Top="10"
                                                        Canvas.Right="-50"
                                                        Width="120"
                                                        Height="120"
                                                        Background="#ffffff"
                                                        CornerRadius="100"
                                                        Opacity="0.2" />
                                                <Border Canvas.Right="-30"
                                                        Canvas.Bottom="-10"
                                                        Width="120"
                                                        Height="120"
                                                        Background="#ffffff"
                                                        CornerRadius="100"
                                                        Opacity="0.3" />
                                            </Canvas>
                                        </Border>
                                        <TextBlock Margin="10,5"
                                                   FontWeight="Bold"
                                                   Text="{Binding Title}" />
                                        <md:PopupBox HorizontalAlignment="Right"
                                                     Panel.ZIndex="1">
                                            <Button Content="删除" />
                                        </md:PopupBox>
                                        <TextBlock Grid.Row="1"
                                                   Margin="10,5"
                                                   Text="{Binding Content}" />
                                    </Grid>
                                </md:TransitioningContent>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>

</UserControl>
