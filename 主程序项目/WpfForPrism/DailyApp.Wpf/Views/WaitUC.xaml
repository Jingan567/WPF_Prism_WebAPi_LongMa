<UserControl x:Class="DailyApp.Wpf.Views.WaitUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DailyApp.Wpf.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShow,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300"
                           LastChildFill="False">
                    <TextBlock DockPanel.Dock="Top"
                               Text="添加待办"
                               FontSize="20"
                               FontWeight="Bold"></TextBlock>
                    <StackPanel Margin="20"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                        <TextBlock Text="状态："
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"></TextBlock>
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBox DockPanel.Dock="Top"
                             md:HintAssist.Hint="请输入待办标题"
                             Margin="20,10"></TextBox>
                    <TextBox DockPanel.Dock="Top"
                             md:HintAssist.Hint="请输入待办内容"
                             Margin="20,10"></TextBox>

                    <Button DockPanel.Dock="Top"
                            Content="添加到待办"
                            Margin="20,10"
                            Command="{Binding ShowAddCommand}"></Button>
                </DockPanel>

            </md:DrawerHost.RightDrawerContent>
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Margin="15,0,0,0"
                                Orientation="Horizontal">
                        <TextBox VerticalAlignment="Center"
                                 md:HintAssist.Hint="查找待办事项...."
                                 md:TextFieldAssist.HasClearButton="True" />
                        <TextBlock Margin="10,0"
                                   VerticalAlignment="Center"
                                   Text="筛序:" />
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem>全部</ComboBoxItem>
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <Button Margin="10"
                            HorizontalAlignment="Right"
                            Content="添加待办"
                            Command="{Binding ShowAddCommand}" />

                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding WaitList}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Grid Width="220"
                                          Height="180"
                                          MaxWidth="250"
                                          Margin="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Border Grid.RowSpan="2"
                                                Background="Green"
                                                CornerRadius="5">
                                            <Canvas ClipToBounds="True">
                                                <Border Canvas.Top="10"
                                                        Canvas.Right="-50"
                                                        Width="120"
                                                        Height="120"
                                                        Background="#ffffff"
                                                        CornerRadius="100"
                                                        Opacity="0.2" />
                                                <Border Canvas.Right="-30"
                                                        Canvas.Bottom="-10"
                                                        Width="120"
                                                        Height="120"
                                                        Background="#ffffff"
                                                        CornerRadius="100"
                                                        Opacity="0.3" />
                                            </Canvas>
                                        </Border>
                                        <TextBlock Margin="10,5"
                                                   FontWeight="Bold"
                                                   Text="{Binding Title}" />
                                        <md:PopupBox HorizontalAlignment="Right"
                                                     Panel.ZIndex="1">
                                            <Button Content="删除" />
                                        </md:PopupBox>
                                        <TextBlock Grid.Row="1"
                                                   Margin="10,5"
                                                   Text="{Binding Content}" />
                                    </Grid>
                                </md:TransitioningContent>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

        </md:DrawerHost>
    </md:DialogHost>

</UserControl>
