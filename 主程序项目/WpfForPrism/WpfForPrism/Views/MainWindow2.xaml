<Window
    x:Class="WpfForPrism.Views.MainWindow2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfForPrism.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="MainWindow2"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Command="{Binding ShowCmd}"
                CommandParameter="UCA"
                Content="区域A" />
            <Button
                Width="80"
                Height="30"
                Command="{Binding ShowCmd}"
                CommandParameter="UCB"
                Content="区域B" />
            <Button
                Width="80"
                Height="30"
                Command="{Binding ShowCmd}"
                CommandParameter="UCC"
                Content="区域C" />
        </StackPanel>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="contentRegion" />
        <!-- prism:RegionManager.RegionName="contentRegion" 指定一个区域的名称-->
    </Grid>
</Window>
